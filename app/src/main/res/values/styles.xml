<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTitleBlack</item>
        <item name="colorPrimaryDark">@color/colorTitleBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPurple</item>
    </style>
    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">#90000000</item>  <!-- 设置背景颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <style name="ThemeDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundWhite</item>
    </style>

    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>


    <style name="button_yellow_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorButtonYellow</item>
       <item name="android:buttonCornerRadius">5dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:strokeColor">#FFFFFF</item>

    </style>



    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorTextBlue</item>
    </style>
</resources>
