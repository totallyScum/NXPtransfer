<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTitleBlack</item>
        <item name="colorPrimaryDark">@color/colorTitleBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPurple</item>
    </style>
    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">#90000000</item>  <!-- 设置背景颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <style name="ThemeDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundWhite</item>
    </style>
</resources>
