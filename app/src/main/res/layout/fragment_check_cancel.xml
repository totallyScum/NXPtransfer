<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/check_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextBlue"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="取消开票"
                android:textColor="@color/colorButtonWhite"
                android:textSize="20dp"></TextView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textView_wrap_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="机器号"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/invoices_cancel_machine_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"

            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textView_wrap_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="源程序"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/invoices_current_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="开票人"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/invoices_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textView_wrap_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="开票时间"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/invoices_start_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textView_wrap_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="开票类型"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/invoices_cancel_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textView_wrap_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:textSize="@dimen/text_title_size"
            android:text="备注"
            android:textColor="@color/colorButtonWhite"
            android:background="@drawable/shape_corner_left"
            android:layout_weight="2"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/invoices_cancel_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/textView_padding_left"
            android:background="@null"
            />

    </LinearLayout>

    <Button
        android:id="@+id/check_cancel_submit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/colorButtonYellow"
        android:textColor="@color/colorButtonWhite"
        android:text="提交"
        android:textSize="25dp"
        />
    </LinearLayout>
</LinearLayout>
</FrameLayout>
