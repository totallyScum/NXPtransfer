<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/turning_published_ll_hide"
    android:orientation="vertical"
android:background="@drawable/shape_corner"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/hide_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转机人ID:" />

                <TextView
                    android:id="@+id/transfer_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机器分组:" />

                <TextView
                    android:id="@+id/machine_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机器号:" />

                <TextView
                    android:id="@+id/machine_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操作员:" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="源程序:" />

                <TextView
                    android:id="@+id/current_program_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标程序:" />

                <TextView
                    android:id="@+id/target_program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务下发时间:" />

                <TextView
                    android:id="@+id/question_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转机开始时间:" />

                <TextView
                    android:id="@+id/turning_start_dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转机开始时间:" />

                <TextView
                    android:id="@+id/turning_start_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转机结束时间:" />

                <TextView
                    android:id="@+id/turning_end_dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障开始时间:" />

                <TextView
                    android:id="@+id/error_start_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障结束时间:" />

                <TextView
                    android:id="@+id/error_end_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务取消时间:" />

                <TextView
                    android:id="@+id/cancel_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转机人:" />

                <TextView
                    android:id="@+id/founder_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/transfer_start"
            style="@style/button_yellow_style"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="开始转机"
            android:textSize="12dp"
            android:visibility="invisible"></Button>
        <Button
            android:id="@+id/transfer_end"
            android:text="结束转机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button_yellow_style"
            android:textSize="12dp"
            android:layout_marginLeft="-10dp"
            ></Button>
        <Button
            android:id="@+id/transfer_error"
            android:text="异常报告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button_yellow_style"
            android:textSize="12dp"
            ></Button>
        <Button
            android:id="@+id/transfer_resume"
            android:text="故障恢复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button_yellow_style"
            android:textSize="12dp"
            ></Button>
        <Button
            android:id="@+id/transfer_cancel"
            android:text="任务取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button_yellow_style"
            android:textSize="12dp"
            ></Button>

    </LinearLayout>
</LinearLayout>