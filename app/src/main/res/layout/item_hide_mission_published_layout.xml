<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mission_published_ll_hide"
    android:orientation="vertical"
android:background="@drawable/shape_corner"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/hide_1"
                android:text="转机人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/hide_2"
                android:text="操作员:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/hide_3"
                android:text="当前程序名:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="结束转机人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hide_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机台号:" />

            <TextView
                android:id="@+id/hide_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备分组:" />

            <TextView
                android:id="@+id/hide_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开票时间:" />
            <TextView
                android:id="@+id/hide_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转机完成时间:" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/check_start"
            android:text="开始转机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></Button>
        <Button
            android:id="@+id/check_end"
            android:text="结束转机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></Button>
        <Button
            android:id="@+id/check_error"
            android:text="异常报告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>
</LinearLayout>