<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundWhite"
>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_corner"
            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_title_size"
                android:text="指定目标程序"
                android:textColor="@color/colorButtonWhite"
                android:background="@drawable/shape_corner_left"
                android:layout_weight="2"
                />
            <com.wrbug.editspinner.EditSpinner
                android:id="@+id/query_program_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></com.wrbug.editspinner.EditSpinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_corner"

            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_title_size"
                android:text="指定机台"
                android:textColor="@color/colorButtonWhite"
                android:background="@drawable/shape_corner_left"
                android:layout_weight="2"
                ></TextView>

            <com.wrbug.editspinner.EditSpinner
                android:id="@+id/query_machine_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></com.wrbug.editspinner.EditSpinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="horizontal"

            android:background="@color/cardview_light_background"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_title_size"
                android:text="指定转换员"
                android:gravity="center"
                android:textColor="@color/colorButtonWhite"
                android:background="@drawable/shape_corner_left"
                android:layout_weight="2"
                ></TextView>

            <com.wrbug.editspinner.EditSpinner
                android:id="@+id/query_transfer_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_title_size"
                ></com.wrbug.editspinner.EditSpinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/shape_corner_left"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="@color/colorButtonWhite"
                android:textSize="@dimen/text_title_size"></TextView>
            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                >

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textView_wrap_height"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/layer_calender"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/text_title_size"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/textView_padding_left"
                    ></TextView>


            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_wrap_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/shape_corner_left"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="@color/colorButtonWhite"
                android:textSize="@dimen/text_title_size"></TextView>
            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                >

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textView_wrap_height"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/layer_calender"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/text_title_size"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/textView_padding_left"

                    ></TextView>


            </LinearLayout>



        </LinearLayout>








        <Button
            android:id="@+id/query_submit"
            android:layout_width="100dp"
            android:layout_height="@dimen/textView_wrap_height"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorButtonYellow"
            android:textColor="@color/colorButtonWhite"
            android:text="提交"
            android:textSize="20dp"
            />
    </LinearLayout>


</LinearLayout>